<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pet_shop_pet_type_view_form" model="ir.ui.view">
            <field name="name">pet_shop.pet.type.view.form</field>
            <field name="model">pet_shop.pet.type</field>
            <field name="arch" type="xml">
                <form string="Pet types">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pet_shop_pet_type_view_tree" model="ir.ui.view">
            <field name="name">pet_shop.pet.type.view.tree</field>
            <field name="model">pet_shop.pet.type</field>
            <field name="arch" type="xml">
                <tree string="Pet types">
                    <field name="name"/>
                    <field name="color" widget="color_picker" readonly="True" />
                </tree>
            </field>
        </record>

        <record id="pet_shop_pet_type_action" model="ir.actions.act_window">
            <field name="name">Pet types</field>
            <field name="res_model">pet_shop.pet.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

    </data>
</odoo>

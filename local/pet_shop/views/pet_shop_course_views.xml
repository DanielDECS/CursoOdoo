<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pet_shop_course_view_calendar" model="ir.ui.view">
            <field name="name">pet_shop.course.view.calendar</field>
            <field name="model">pet_shop.course</field>
            <field name="arch" type="xml">
                <calendar string="Courses" date_start="start_date" date_stop="end_date" color="price">
                    <field name="name"/>
                    <field name="price"/>
                </calendar>
            </field>
        </record>

        <record id="pet_shop_course_view_tree" model="ir.ui.view">
            <field name="name">pet_shop.course.view.tree</field>
            <field name="model">pet_shop.course</field>
            <field name="arch" type="xml">
                <tree string="Courses">
                    <field name="name"/>
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <record id="pet_shop_course_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">pet_shop.course</field>
            <field name="view_mode">calendar</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    
    </data>
</odoo>

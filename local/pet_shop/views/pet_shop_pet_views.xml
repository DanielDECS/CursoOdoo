<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="pet_shop_pet_view_tree" model="ir.ui.view">
        <field name="name">pet_shop.pet.view.tree</field>
        <field name="model">pet_shop.pet</field>
        <field name="arch" type="xml">
            <tree string="Pets">
                <field name="name"/>
                <field name="sex" />
                <field name="adopted" />
                <field name="price" />
            </tree>
        </field>
    </record>

    <record id="pet_shop_pet_view_form" model="ir.ui.view">
        <field name="name">pet_shop.pet.view.form</field>
        <field name="model">pet_shop.pet</field>
        <field name="arch" type="xml">
            <form string="Pet">
                <sheet>
                    <group string="Pet Information" name="profile_group">
                        <field name="photo" widget="image" style="width:100px" />
                        <field name="name" />
                        <field name="bio" />
                        <field name="sex" />
                        <field name="birth_date" />
                        <field name="age" />
                        <field name="weight" />
                    </group>
                    <group string="Adoption Information" name="adoption_group">
                        <field name="adopted" />
                        <field name="birth_certificate" />
                        <field name="price" />
                        <field name="currency_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_shop_pet_action" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="res_model">pet_shop.pet</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first pet
            </p>
        </field>
    </record>

    </data>


</odoo>
